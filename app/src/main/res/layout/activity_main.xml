<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:background="@drawable/bg_color">


    <Button android:id="@+id/bienvenida"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"

            android:text="Bienvenida"
            android:background="@drawable/btn_uno"
            android:textColor="@drawable/txt_btn_uno"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"/>

    <Button android:id="@+id/login"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/btn_uno"
            android:textColor="@drawable/txt_btn_uno"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="Login"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"/>

    <Button android:id="@+id/registro"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/btn_uno"
            android:textColor="@drawable/txt_btn_uno"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="Registro"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"/>

    <Button android:id="@+id/btPreferenciasCategoria"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/btn_uno"
            android:textColor="@drawable/txt_btn_uno"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="Preferencias Categoria (listar y elejir)"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"/>

    <Button android:id="@+id/btMatchesListar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/btn_uno"
            android:textColor="@drawable/txt_btn_uno"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
