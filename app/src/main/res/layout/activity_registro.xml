<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".RegistroActivity"
        android:gravity="center"
        android:background="@drawable/bg_color">

    <TextView android:id="@+id/titulo"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dip"
              android:layout_marginBottom="5dip"
              android:text="Registro de Usuario"
              android:gravity="center"
              android:textSize="70dip"
              android:fontFamily="@font/akronim"
              android:textColor="#6746c3"/>

    <EditText android:id="@+id/name"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:hint="Nombre"
              android:gravity="center"
              android:textSize="30sp"
              android:textColor="#311b92"
              android:layout_marginLeft="40dp"
              android:layout_marginRight="40dp"
              android:layout_marginBottom="20dp"/>

    <EditText android:id="@+id/apellido"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:hint="Apellidos"
              android:gravity="center"
              android:textSize="30sp"
              android:textColor="#311b92"
              android:layout_marginLeft="40dp"
              android:layout_marginRight="40dp"
              android:layout_marginBottom="20dp"/>

    <EditText
            android:id="@+id/nacimiento"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:hint="Fecha de Nacimiento"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#311b92"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"/>

    <EditText android:id="@+id/email"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:hint="Correo Electronico"
              android:gravity="center"
              android:textSize="30sp"
              android:textColor="#311b92"
              android:layout_marginLeft="40dp"
              android:layout_marginRight="40dp"
              android:layout_marginBottom="20dp"/>

    <EditText android:id="@+id/password"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:gravity="center"
              android:hint="ContraseÃ±a"
              android:textSize="30sp"
              android:textColor="#311b92"
              android:layout_marginLeft="40dp"
              android:layout_marginRight="40dp"
              android:layout_marginBottom="20dp"/>


    <Button android:id="@+id/registro"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/btn_uno"
            android:textColor="@drawable/txt_btn_uno"
            android:text="Registro"
            android:textSize="25sp"
            android:fontFamily="@font/akronim"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="50dp"/>


</LinearLayout>

